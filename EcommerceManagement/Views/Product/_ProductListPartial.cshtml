@model List<EcommerceManagement.Models.Domain.ProductModel>

@{
    ViewData["Title"] = "GetAll";
}

<html>
    <head>
        <style>
        :root {
            --gradient: linear-gradient(to left top, #DD2476 10%, #FF512F 90%) !important;
        }

    

        .card {
            background: #222;
            border: 1px solid #dd2476;
            color: rgba(250, 250, 250, 0.8);
            margin-bottom: 2rem;
        }

        .btn {
            border: 5px solid;
            border-image-slice: 1;
            background: var(--gradient) !important;
            -webkit-background-clip: text !important;
            -webkit-text-fill-color: transparent !important;
            border-image-source: var(--gradient) !important;
            text-decoration: none;
            transition: all .4s ease;
        }

            .btn:hover, .btn:focus {
                background: var(--gradient) !important;
                -webkit-background-clip: none !important;
                -webkit-text-fill-color: #fff !important;
                border: 5px solid #fff !important;
                box-shadow: #222 1px 0 10px;
                text-decoration: underline;
            }
            .top27{
               top:20px;
            }
            .endm16{
                right:-48px;
            }
            .borderR{
                border-radius:4px;
            }
            .bgyello{
                background:#ee3f3f;
            }
        </style>
  
    </head>
    <boyd>
    <div class="input-group d-flex justify-content-end mt-2">
        <form id="searchForm" method="post" asp-action="Search" asp-controller="Product">
            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="Search products..." value="" id="searchInput" name="searchQuery">
                <button class="btn btn-outline-secondary" type="submit">Search</button>
                <button class="btn btn-outline-danger" type="button" onclick="resetSearch()">Reset</button>
            </div>
        </form>
    </div>
       @if(Model.Count>0 && Model.Any()){
          <div class="container  mt-4">
                <div class="row">
                   @foreach (var x in Model)
                   {

                      <div class="col-md-3">
                        <div class="card position-relative" style="width: 16rem;">
                            <img src="/image/@x.ProductImage" class="card-img-top" style="height:12rem" alt="...">
                            <div class="card-body">
                                @if (x.IsTrending)
                                {
                                    <div class="position-absolute top27 endm16 borderR text-white bgyello translate-middle">
                                        <p class="pe-3 ps-3 text-center">Trending</p>
                                    </div>
                                }
                                <h5 class="card-title">@x.ProductName</h5>
                                <h6 class="card-subtitle mb-2 text-muted">@x.Category.CategoryName</h6>
                                <div class="d-flex justify-content-between mb-2">
                                   <div class="fs-4 fw-500">Price</div>
                                    <div class="fs-4 fw-500" >@x.ProductPrice</div>
                                </div>

                                @if (User.IsInRole("Admin"))
                                {
                                    <div class="d-flex justify-content-between">
                                        <a href="/Product/Update/@x.ProductId" class="btn mr-2 text-center"><i class="fas fa-link pe-2 ps-2 text-center"></i> Edit</a>
                                        <a href="/Product/Deactive/@x.ProductId" class="btn "><i class="fab fa-github"></i> Deactive</a>
                                    </div>
                                }
                                else
                                {
                                    <div>
                                        <a href="/Product/Update/@x.ProductId" class="btn w-100 text-center"><i class="fas fa-link pe-2 ps-2 text-center"></i> Add To Cart</a>
                                    </div>
                                }
                            </div>
                        </div>
                      </div>
                   }
                </div>
          </div>
         
    }
    else
    {
        <div class="d-flex justify-content-center  align-items-center vh-100">
            <div class=" card p-5 w-25">
                <div class="card-title text-center text-danger fs-5 fw-600">No Product are Persents</div>
                <div class="card-body text-center"><a class="btn btn-success pl-2 pr-2" href="/Product/AddProduct">Add Product</a></div>
            </div>
        </div>
    }

    @section Scripts{
        <script>
            // Handle form submission with AJAX
            $('#searchForm').submit(function (event) {
                event.preventDefault(); // Prevent the form from submitting in the traditional way

                // Perform AJAX request
                $.ajax({
                    url: '@Url.Action("Search", "Product")',
                type: 'POST',
                data: { query: $('#searchInput').val() },
                success: function (data) {
                    /* $('#searchResults').html(data);  */// Update the search results container
                }
            });
        });
            // Reset search results
            function resetSearch() {
                $('#searchInput').val(''); // Clear the search input
                $('#searchResults').empty(); // Clear the search results container
            }
        </script>
    }
    </boyd>
</html>


