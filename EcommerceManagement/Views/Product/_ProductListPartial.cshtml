@model List<EcommerceManagement.Models.Dto.ProductCategoryDto>

@{
    ViewData["Title"] = "GetAll";
}

<table class="table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Product Description</th>
            <th>Product Price</th>
            <th>Is Available</th>
            <th>Is Trending</th>
            <th>Category Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.ProductName</td>
                    <td>@product.ProductDes</td>
                    <td>@product.ProductPrice</td>
                    <td>@product.IsAvailable</td>
                    <td>@product.IsTrending</td>
                    <td>@product.CatagoryName</td>
                    <td>
                        <a class="btn btn-primary" href="/Product/Update/@product.ProductId">Edit</a>
                        <a class="btn btn-danger" href="/Product/Update/@product.ProductId">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
