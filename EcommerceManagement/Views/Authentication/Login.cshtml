@model EcommerceManagement.Models.Dto.LoginModel;

@{
    ViewData["Title"] = "Login";
}

<html>
<head>
    <style>
        .mt120 {
            margin-top: 120px;
        }

        .bordTBC {
            border-top-left-radius: 120px;
            border-bottom-left-radius: 120px;
        }
    </style>
</head>
<body>
    <section class="h-100 gradient-form" style="background-color: #eee;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-xl-10">
                    <div class="card rounded-3 text-black">
                        <div class="row g-0">
                            <div class="col-lg-6">
                                <div class="card-body p-md-5 mx-md-4">

                                    <div class="text-center">
                                        <img src="../Content/images/logo.png"
                                             style="width: 155px" alt="logo">

                                        <h4 class="mt-1 mb-5 pb-1">We are The BigCommerce Giant </h4>
                                    </div>

                                    <form method="post" asp-action="Login" asp-controller="Authentication">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <p>Please login to your account</p>

                                        <div class="form-outline mb-4">
                                            <input type="email" id="form2Example11" class="form-control"
                                                   placeholder="Phone number or email address" asp-for="Username" required/>
                                            <label class="form-label" for="form2Example11">Username</label>
                                            <span asp-validation-for="Username" class="text-danger"></span>
                                        </div>
                                        <div class="form-outline mb-4">
                                            <input type="password" id="form2Example22" class="form-control" asp-for="Password" required />
                                            <label class="form-label" for="form2Example22">Password</label>
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>
                                        <div class=" mb-4 d-flex justify-content-between">
                                            <div class=" form-check">
                                                <label class="form-check-label">
                                                    <input asp-for="RememberMe" class="form-check-input" checked/> @Html.DisplayNameFor(a => a.RememberMe);
                                                </label>

                                            </div>
                                            <div><a class="text-muted" href="#!">Forgot password?</a></div>
                                        </div>
                                        <div class="pt-1 mb-5 pb-1 w-100">
                                            <div><input type="submit" class="btn btn-success w-100" /></div>

                                        </div>

                                        <div class="d-flex align-items-center justify-content-around pb-4">
                                            <p class="mb-0 me-2">Don't have an account?</p>
                                            <a href="/Authentication/Register"  class="btn btn-outline-danger">Create new</a>
                                        </div>

                                    </form>

                                </div>
                            </div>
                            <div class="col-lg-6 h-100 d-lg-block d-md-none">
                                <div>
                                    <img src="https://img.freepik.com/free-photo/view-3d-businessman_23-2150709814.jpg?size=626&ext=jpg" class="w-100 mt120  bordTBC" style="height:auto" />
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}