@model EcommerceManagement.Models.Dto.ChangePasswordDto;
<html>
    <head>
        <style>
            .mt70{
                margin-top:70px;
            }
        </style>
    </head>
    <body>
    <form method="post" asp-action="ChangePassword" asp-controller="Authentication" class="form-control mt70">
             <div class="d-flex flex-Column align-items-center mb-2">

                <div class="d-flex flex-row align-items-center mb-2">                
                  <div class="form-outline flex-fill mb-0">
                    <input type="password" id="form3Example4c" class="form-control" asp-for="OldPassword" />
                    <label class="form-label" for="form3Example4c">Old Password</label>
                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                  </div>
                </div>

                <div class="d-flex flex-row align-items-center mb-2">
                <div class="form-outline flex-fill mb-0">
                  <input type="password" id="form3Example4" class="form-control" asp-for="NewPassword" />
                  <label class="form-label" for="form3Example4">New Password</label>
                  <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
                </div>

                <div class="d-flex flex-row align-items-center mb-2">
                    <div class="form-outline flex-fill mb-0">
                        <input type="text" id="form3Example4" class="form-control" asp-for="ConfirmNewPassword" />
                        <label class="form-label" for="form3Example4">Confirm New Password</label>
                        <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                    </div>
                </div>
               
                
                
            </div>
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-success">Update</button>
                 <button type="reset" class="btn btn-success">Reset</button>
            </div>
        </form>
    </body>
</html>