@model EcommerceManagement.Models.Dto.ChangePasswordByAdmin;
<html>
<head>
    <style>
        .mt70 {
            margin-top: 70px;
        }
    </style>
</head>
<body>
    <div class="container-fluid d-flex justify-content-center align-items-center vh-100">
        <form method="post" asp-action="ChangePasswordByAdmin" asp-controller="Authentication" class="form-control mt70 w-25 p-5">

            <input type="text" asp-for="UserName" hidden/>
            <div class="form-outline flex-fill mb-0">
                <input type="password" id="form3Example4c" class="form-control" asp-for="OldPassword" />
                <label class="form-label" for="form3Example4c">Old Password</label>
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>



            <div class="form-outline flex-fill mb-0">
                <input type="password" id="form3Example4" class="form-control" asp-for="NewPassword" />
                <label class="form-label" for="form3Example4">New Password</label>
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>



            <div class="form-outline flex-fill mb-0">
                <input type="text" id="form3Example4" class="form-control" asp-for="ConfirmNewPassword" />
                <label class="form-label" for="form3Example4">Confirm New Password</label>
                <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-success">Update</button>
                <button type="reset" class="btn btn-danger">Reset</button>
            </div>
        </form>

    </div>
</body>
</html>