@model EcommerceManagement.Models.Dto.AddUserDto;

@{
    ViewData["Title"] = "AddUser";
}

<html>
<head>
    <style>
        /*  .text-yello{
        color:greenyellow;
       } */

    </style>
</head>
<body>
    <section class="vh-100" style="background-color: #eee;">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-lg-12 col-xl-11">
                    <div class="card text-black" style="border-radius: 25px;">
                        <div class="card-body p-md-2">
                            <div class="row justify-content-center">
                                <div class="col-lg-6 order-2 order-lg-1">

                                    <p class="text-center h4 text-yello fw-bold mb-4 mx-1 mx-md-4 mt-4">User Registration </p>

                                    <form class="mx-1 mx-md-4 p-4" asp-action="Register" asp-controller="Authentication">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="row d-flex flex-row  mb-2 justify-content-between  ms-1">
                                            <div class="col-lg-5 form-outline flex-fill mb-0">
                                                <input type="text" id="form3Example1c" class="form-control" asp-for="FirstName" />
                                                <label class="form-label" for="form3Example1c">First Name</label>
                                                <span asp-validation-for="FirstName" class="text-danger"></span>
                                            </div>
                                            <div class="col-lg-5 form-outline flex-fill mb-0 ms-1">
                                                <input type="text" id="form3Example1c" class="form-control" asp-for="LastName"/>
                                                <label class="form-label" for="form3Example1c">Last Name</label>
                                                <span asp-validation-for="LastName" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="d-flex flex-row align-items-center mb-2">
                                            <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <input type="text" id="form3Example3c" class="form-control" asp-for="PhoneNo"/>
                                                <label class="form-label" for="form3Example3c">Mobile Number</label>
                                                <span asp-validation-for="PhoneNo" class="text-danger"></span>
                                            </div>
                                        </div> 
                                        <div class="d-flex flex-row align-items-center mb-2">
                                            <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <input type="text" id="form3Example3c" class="form-control" asp-for="Address"/>
                                                <label class="form-label" for="form3Example3c">Address</label>
                                                <span asp-validation-for="Address" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="d-flex flex-row align-items-center mb-2">
                                            <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <input type="email" id="form3Example3c" class="form-control" asp-for="Email"/>
                                                <label class="form-label" for="form3Example3c">Your Email</label>
                                                <span asp-validation-for="Email" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-2">
                                            <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <input type="password" id="form3Example4c" class="form-control" asp-for="Password"/>
                                                <label class="form-label" for="form3Example4c">Password</label>
                                                <span asp-validation-for="Password" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-2">
                                            <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <input type="password" id="form3Example4cd" class="form-control" asp-for="ConfirmPassword"/>
                                                <label class="form-label" for="form3Example4cd">Confirmend Password</label>
                                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="d-flex justify-content-between mx-4 mb-3 mb-lg-2">
                                            <input type="submit" class="btn btn-primary" value="Sign Up" />
                                            <input type="reset" class="btn btn-danger" />
                                        </div>
                                    </form>
                                </div>
                                <div class="col-lg-6 d-flex align-items-center order-1 order-lg-2">

                                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                         class="img-fluid" alt="Sample image">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}