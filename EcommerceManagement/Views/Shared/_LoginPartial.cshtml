@using EcommerceManagement.Models.Domain
﻿@using Microsoft.AspNetCore.Identity;
@inject SignInManager<UserModel> signInManager

<html>
    <head>
        <style>
        .fontsytle {
            font-family: font-family: 'Cinzel', serif;
        }
        .tcaqua{
            color: #38B6FF;
        }

        .dshHover{
            color:white;
        }
        .dshHover:hover{
            color: #38B6FF;
        }
        </style>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@600&display=swap" rel="stylesheet">
    </head>
    <body>

    <ul class="navbar-nav fontsytle">
        @if (signInManager.IsSignedIn(User))
        {
            @if (User.IsInRole("Admin"))
            {
                <li class="nav-item fontsytle">
                    <a class="nav-link text-white fs-5 fontsytle d-flex justify-content-around dshHover" style="width:10rem" href="/Admin/Index"><i class="bi bi-person-circle"></i><span class="dshHover">Dashboard</span></a>
                </li>
            }
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <span class="fst-italic fs-5 tcaqua"> Hello</span> <span class="fs-5 fw-bold"> @User.Identity!.Name</span>
                </a>
                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <li>
                        <a class="dropdown-item d-flex justify-content-around" asp-action="Logout" asp-controller="Authentication">
                            <i class="bi bi-box-arrow-left text-success"></i> <span>Logout</span>
                        </a>
                        <a class="dropdown-item d-flex justify-content-around" asp-action="GetProfile" asp-controller="Authentication">
                            <i class="bi bi-person-vcard text-info"></i>  <span>Profile</span>
                        </a>
                        <a class="dropdown-item d-flex justify-content-between" asp-action="ChangePassword" asp-controller="Authentication">
                            <i class="bi bi-lock-fill text-danger"></i><span>Change Password</span>
                        </a>
                       
                    </li>
                </ul>
               
            </li>

           


        }
        else
        {
            <li class="nav-item">
                <a class="nav-link  text-white tcaqua d-flex justify-content-around fs-5" style="width:6rem" asp-area="" asp-controller="Authentication" asp-action="Register"><i class="bi bi-person-add"></i><span>Register</span></a>
            </li>
            <li class="nav-item ms-2">
                <a class="nav-link text-white tcaqua d-flex justify-content-around fs-5" style="width:6rem" asp-area="" asp-controller="Authentication" asp-action="Login"><i class="bi bi-box-arrow-in-right"></i><span>Login</span></a>
            </li>
        }
    </ul>
    </body>
</html>