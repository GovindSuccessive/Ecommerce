@using EcommerceManagement.Models.Domain
﻿@using Microsoft.AspNetCore.Identity;
@inject SignInManager<UserModel> signInManager


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EcommerceManagement</title>
    <style>
        *{
            margin:0px;
            padding:0px;
            
        }
        .txskyblue{
            color: #38B6FF;
        }
        .txdarkblue{
            color: #1d58af;
        }
        .fdes{
            font-family: font-family: 'Acme', sans-serif;
        }
        .nav-link:hover{
            color:#1d58af;
        }

        .bgaqua {
            background: #4549df;
        }
        .fontsytle{
            font-family: font-family: 'Cinzel', serif;
        }
        .bgw{
            background:white;
        }
        .bgb{
            background:black;
        }

        .modal-dialog {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
        }

    </style>
  
    <link rel="stylesheet" href="	https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Acme&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EcommerceManagement.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@600&display=swap" rel="stylesheet">
</head>
<body>

    <header classs="border-bottom-0 bgb">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm bgb fixed-top">
                <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><spna class="fst-italic fw-bold fs-3 txskyblue">Easy</spna><span class="fw-bold fs-3 text-white">Mart</span></a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                        <partial name="_LoginPartial" />
                    @if (signInManager.IsSignedIn(User) && User.IsInRole("User"))
                    {
                        @if (ViewContext.RouteData.Values["controller"].ToString().ToLower() == "home" && ViewContext.RouteData.Values["action"].ToString().ToLower() == "index")
                        {
                           @*  <button type="button" class="btn" data-bs-toggle="modal" data-bs-target="#myModal"><i class="bi bi-cart4  fs-4 "></i></button> *@
                            <a href="Cart/Index" class="btn"><i class="bi bi-cart4  fs-4 "></i></a>
                        }
                       
                    }
                    else if(!User.IsInRole("Admin"))
                    {
                        <button type="button" class="btn" data-bs-toggle="modal" data-bs-target="#myModal"><i class="bi bi-cart4 text-white  fs-4 "></i></button>
                    }

                    </div>
                </div>
            </nav>
        </header>

    <div class="modal fade" id="myModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title text-center" id="exampleModalLabel">Are you not login?</h3>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p class="fs-4">Please Login Your Account Here!</p>
                </div>
                <div class="modal-footer d-flex justify-content-between">
                    <a href="/Authentication/Login" class="btn btn-primary">Login</a>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                   
                </div>
            </div>
        </div>
    </div>
    
    <div class="container-fluid">
        <main role="main" >
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.20/dist/sweetalert2.all.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
